{% extends'base.html.twig' %}

{% block title %}Scores{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Scoreboard</h1>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Score</th>
            <th scope="col">Delete Game</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.date|date("m/d/Y h:m:s", "Europe/Paris") }}</td>
                {% if game.score is not null %}
                    <td>{{ game.score }}</td>
                {% else %}
                    <td><a href="{{ path('play') }}" >Game not over yet !</a></td>
                {% endif %}
                <td>
                    <div class="btn btn-danger" onclick="deleteGame('{{ path('delete', {id:game.id}) }}')">Delete</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script>
        async function deleteGame(path)
        {
         await fetch(path);
         document.location.reload(true);
        }
    </script>
{% endblock %}